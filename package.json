{
  "name": "@likecoin/epub-ts",
  "version": "0.3.96",
  "description": "TypeScript EPUB parser and renderer, forked from epubjs",
  "keywords": [
    "epub",
    "ebook",
    "reader",
    "typescript",
    "epubjs",
    "parser",
    "renderer"
  ],
  "type": "module",
  "main": "dist/epub.cjs",
  "module": "dist/epub.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/epub.js",
      "require": "./dist/epub.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": "https://github.com/likecoin/epub.ts",
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docs": "typedoc --out documentation/html --entryPoints src/index.ts --tsconfig tsconfig.json --excludePrivate --excludeInternal && typedoc --plugin typedoc-plugin-markdown --out documentation/md --entryPoints src/index.ts --tsconfig tsconfig.json --excludePrivate --excludeInternal --readme none"
  },
  "author": "William Chong <me@williamchong.cloud>",
  "contributors": [
    {
      "name": "Fred Chasen",
      "email": "fchasen@gmail.com"
    }
  ],
  "homepage": "https://github.com/likecoin/epub.ts",
  "bugs": "https://github.com/likecoin/epub.ts/issues",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/localforage": "0.0.34",
    "eslint": "^9.39.2",
    "jsdom": "^28.0.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.10.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.7.5",
    "jszip": "^3.7.1",
    "localforage": "^1.10.0"
  }
}
